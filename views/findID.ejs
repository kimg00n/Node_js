		<div class="limiter">
			<div
				class="container-login100"
				style="background-image: url('images/bg-01.jpg')"
			>
				<div class="wrap-login100 p-l-110 p-r-110 p-t-62 p-b-33">
					<span class="login100-form-title p-b-53">
						아이디 찾기
					</span>
					<% if (code=="success") { %>
						<div class="p-t-31 p-b-9" style="margin-left: 10%;">
						<span class="txt1"> 아이디 </span>
						<h1 style="color: white; margin-bottom: 20px;"><%= results_id %></h1>
						<span class="txt1"> 이름 </span>
						<h1 style="color: white; margin-bottom: 20px;"><%= results_username %></h1>
						<span class="txt1"> 이메일 </span>
						<h1 style="color: white; margin-bottom: 20px;"><%= results_email %></h1>
					</div>

						<% } else { %>

					<form
						class="login100-form validate-form flex-sb flex-w"
						action="/login/find_ID"
						method="post"
					>
						
						<div class="p-t-31 p-b-9">
							<span class="txt1"> 이름 </span>
						</div>
						<div
							class="wrap-input100 validate-input"
							data-validate="이름을 기입해주세요."
						>
							<input
								class="input100"
								type="text"
								name="username"
							/>
							<span class="focus-input100"></span>
						</div>
						
						<div class="p-t-31 p-b-9">
							<span class="txt1"> 이메일 </span>
						</div>
						<div
							class="wrap-input100 validate-input"
							data-validate="이메일 기입해주세요."
						>
							<input 
							class="input100" 
							type="text" 
							name="email" 
							/>
							<span class="focus-input100"></span>
						</div>

						<div class="container-login100-form-btn m-t-17">
							<button class="login100-form-btn" type="submit">
								아이디 찾기
							</button>
						</div>
					</form>
					<% } %>
				</div>
			</div>
		</div>

